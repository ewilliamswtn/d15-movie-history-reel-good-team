
<div class="row center-align">
  <h1> Watchlist </h1>
  <a class="waves-effect waves-grey btn-flat showUntracked">Show Untracked</a>
  <a class="waves-effect waves-grey btn-flat showUnwatched">Show Unwatched</a>
  <a class="waves-effect waves-grey btn-flat showWatched">Show Watched</a>
  <a class="waves-effect waves-grey btn-flat showFavorites">Favorites</a>
</div>
<div class="row">
{{#each this}}
<div class="col s6">
  <div class="z-depth-1 movieCard">
  <div class="chip right-align delete-btn" key="{{@key}}">
    Delete
    <i class="close material-icons">close</i>
  </div>
  <h3 class="title"> {{Title}} </h3>
  <img src="{{Poster}}" alt="{{Title}} Image" class="movieImg">
  <p> Released in {{Year}} </p>
  <p> {{Actors}} </p>
  <span class="rating"> Rate
    <i key="{{@key}}" class="material-icons userRating {{activateStars rating 1}}">star</i>
    <i key="{{@key}}" class="material-icons userRating {{activateStars rating 2}}">star</i>
    <i key="{{@key}}" class="material-icons userRating {{activateStars rating 3}}">star</i>
    <i key="{{@key}}" class="material-icons userRating {{activateStars rating 4}}">star</i>
    <i key="{{@key}}" class="material-icons userRating {{activateStars rating 5}}">star</i>
    <i key="{{@key}}" class="material-icons userRating {{activateStars rating 6}}">star</i>
    <i key="{{@key}}" class="material-icons userRating {{activateStars rating 7}}">star</i>
    <i key="{{@key}}" class="material-icons userRating {{activateStars rating 8}}">star</i>
    <i key="{{@key}}" class="material-icons userRating {{activateStars rating 9}}">star</i>
    <i key="{{@key}}" class="material-icons userRating {{activateStars rating 10}}">star</i>
  </span>
  {{#if rating}}
  <span> You've rated this movie {{rating}} stars.</span>
  {{/if}}

</div>
</div>
{{/each}}
</div>
